<script type = "text/javascript">
function validate()
{
if (form1.textfield.value=="")
	{
	alert("Study Cannot be blank");
	form1.textfield.focus();
	return false;
	}
else if (!isNaN(form1.textfield.value))
	{
	alert("Study Cannot be Numeric");
	form1.textfield.focus();
	return false;
	}
else
	{
	return true;
	}
}
</script>
</html>

