<table width="478" height="317" border="0" align="center">
<form name= "f1" method="post" action="" onsubmit="return validate();">
  <tr>
    <td colspan="2"><div align="center">
      <h2 class="style1"><u>ADD FORM1</u> </h2>
    </div></td>
  </tr>
