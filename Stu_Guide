<script type="text/javascript">
function validate()
{
  var letters = /^[A-Za-z]+$/;
  var numbers = /^[0-9]+$/;
  var letterNumber = /^[0-9a-zA-Z-]+$/;
  var mail =/^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$/;
  var passw=/^[A-Za-z]\w{7,14}$/;
  var phoneno = /^\d{10}$/;
  if(!f1.textfield.value.match(letters))
  {
   alert(" Name should be in Alphabets only");
   return false;
  }
  else if(!f1.textfield2.value.match(numbers))
  {
   alert("Age should be in numbers");
   return false;
  }
  else if(f1.textfield2.value<=15)
  {
  alert("Age should be between 15 and 99 only");
  return false;
  }
  else if(f1.textfield2.value>=99)
  {
   alert("Age should be in between 15 and 99 only");
   return false;
  }
  else if(!f1.textfield3.value.match(letterNumber))
  {
   alert("Address should be alphanumeric");
   return false;
  }
  else if(!f1.textfield4.value.match(mail))
  {
   alert("Invalid email ID");
   return false;
  }
  else if(!f1.textfield5.value.match(passw))
  {
   alert("invalid password");
   return false;
  }
  else if(!f1.textfield6.value.match(phoneno))
  {
   alert("invalid phone no");
   return false;
  }
  else if(!f1.textfield7.value.match(letterNumber))
  {
   alert("Date of birth should be alphanumeric");
   return false;
  }
}
</script>
</html>

